<%= form_for @changeset, @delete_path, [method: "delete", data_form: "delete"], fn _f -> %>
<% end %>

<script>
	(function(){
		var deleteButton = document.querySelector("[data-button='delete']");
		if(!deleteButton){
			return;
		}
	   	deleteButton.onclick = function(){
			var deleteForm = document.querySelector("[data-form='delete']");
			if(!deleteForm){
				return;
			}
			var deleteConfirmed = window.confirm("Are you sure you want to delete this item?");
			if(!deleteConfirmed){
				return;
			}
			deleteForm.submit();
		}; 
	})();
</script>