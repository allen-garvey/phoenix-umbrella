<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= Common.ViewHelpers.Form.select_group :movie_id, f, @movies %>

  <%= Common.ViewHelpers.Form.date_input_group :date_scored, f %>

  <%= Common.ViewHelpers.Form.input_group :score, f, &number_input/3, autofocus: true %>

  <%= CommonWeb.FormView.submit_button "Rating" %>

<% end %>
