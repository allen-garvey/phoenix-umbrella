<h1>Show Category</h1>

<span><%= link "Edit", to: Routes.category_path(@conn, :edit, @category), class: "btn btn-primary" %></span>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @category.name %>
  </li>

  <li>
    <strong>Color:</strong>
    <span class={color_style(@category)}><%= @category.color %></span>
  </li>

</ul>
