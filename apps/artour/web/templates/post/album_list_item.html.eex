<li class="<%= @list_item_class %>" draggable="true" data-image-id="<%= @image.id %>">
	<div>
		<%= link(Artour.ImageView.img_tag_for(@conn, @image, :thumbnail, :local), to: image_path(@conn, :show, @image)) %>
	</div>

	<div class="image-title">
		<%= link(Artour.ImageView.display_name(@image), to: image_path(@conn, :show, @image)) %>
		<%= to_paragraphs @caption %>
	</div>
	
	<div class="image-buttons">
		<%= link "Edit", to: post_image_path(@conn, :edit, @post_image), class: "btn btn-default" %>
		<button class=" btn btn-primary" data-role="set-cover-image-button">Make cover image</button>
	</div>
	<div class="list-item-dragger">&#9776;</div>
</li>