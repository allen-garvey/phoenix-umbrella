<article class="post-brief <%= if @post.is_nsfw do "nsfw" end %>">
	<div class="container">
		<div class="post-heading">
			<h2 class="post-title">
				<%= link @post.title, to: show_path(@conn, @post) %>		
			</h2>
			<div class="post-date"><%= datetime_to_display_date(@post.publication_date) %></div>
		</div>
		<div class="post-key-image-super-container">
			<a href="<%= show_path(@conn, @post) %>">
				<div class="post-key-image-container">
					<%= Artour.ImageView.img_tag_for(@conn, @post.cover_image, :cloud) %>
				</div>
			</a>
		</div>
	</div>
	<div class="post-excerpt-background-blur">
		<%= Artour.ImageView.img_tag_for(@conn, @post.cover_image, :cloud) %>
	</div>
</article>