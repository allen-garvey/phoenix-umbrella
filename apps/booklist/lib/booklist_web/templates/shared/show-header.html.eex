<%= link "All " <> @resource_title_plural, to: apply(Routes, @resource_path_atom, [@conn, :index]), class: "back_link" %>

<% #can't have whitespace in alert, or alert:empty CSS will break %>
<div class="alert alert-info"><%= get_flash(@conn, :info) %></div>

<div class="show_header show">
	<h1 class="heading"><%= @item_name %></h1>
	<div class="btn_group">
		<%= link "Edit", to: apply(Routes, @resource_path_atom, [@conn, :edit, @item]), class: "btn btn-default btn-xs" %>
		<%= form_for @conn, apply(Routes, @resource_path_atom, [@conn, :delete, @item]), [method: :delete, class: "delete_button_form", data_confirm: @item_name], fn _f ->
				submit("Delete", class: "btn btn-danger btn-xs")
			end
		%>
		<%= if assigns[:search_query] do
				link content_tag(:div, "âš²", class: "search_icon"), to: BooklistWeb.SuperSearchHelpers.search_url(@search_query), class: "btn btn-primary btn-xs btn_search"	
			end 
		%>
	</div>
</div>