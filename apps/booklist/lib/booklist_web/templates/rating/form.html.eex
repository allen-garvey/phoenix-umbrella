<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= Common.ViewHelpers.Form.select_group :book_id, f, @books %>
  
  <%= Common.ViewHelpers.Form.input_group :date_scored, f, &date_input/3 %>

  <%= Common.ViewHelpers.Form.input_group :score, f, &number_input/3, [autofocus: true] %>

  <%= if !is_nil(assigns[:referrer]) do
  		hidden_input(f, :referrer, name: :referrer, value: assigns[:referrer])
  	end
  %>

  <%= BooklistWeb.SharedView.submit_button "Rating" %>
<% end %>
