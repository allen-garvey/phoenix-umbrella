<%= render(BooklistWeb.SharedView, "show-header.html", 
      conn: @conn, 
      resource_title_plural: "Book locations", 
      resource_path_atom: :book_location_path, 
      item: @book_location, 
      item_name: to_s(@book_location)) 
%>

<ul>

	<li>
		<strong>Book:</strong>
		<%= link BooklistWeb.BookView.to_s(@book_location.book), to: Routes.book_path(@conn, :show, @book_location.book) %>
	</li>

	<li>
		<strong>Location:</strong>
		<%= link BooklistWeb.LocationView.to_s(@book_location.location), to: Routes.location_path(@conn, :show, @book_location.location) %>
	</li>

	<li>
	<strong>Call number:</strong>
	<%= @book_location.call_number %>
	</li>

</ul>
