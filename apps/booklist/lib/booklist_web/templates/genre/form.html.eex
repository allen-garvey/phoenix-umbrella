<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= BooklistWeb.SharedView.form_group :name, f, &text_input/3 %>

  <%= BooklistWeb.SharedView.form_group :is_fiction, f, &checkbox/3 %>

  <%= BooklistWeb.SharedView.submit_button "Genre" %>
<% end %>
