<h2>Re-read Books Report</h2>

<table class="reporting_top_rated_books_table">
    <tr>
        <th></th>
        <th class="reporting_top_rated_books_table__author">Book</th>
        <th class="reporting_top_rated_books_table__count">Count</th>
    </tr>
    <tbody>
        <%= for %{book: book, ratings_count: ratings_count} <- @books do %>
            <tr>
                <td class="reporting_top_rated_books_table__index"></td>
                <td>
                    <%= link(BooklistWeb.BookView.to_s(book), to: Routes.book_path(@conn, :show, book)) %>
                </td>
                <td>
                    <%= ratings_count %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>